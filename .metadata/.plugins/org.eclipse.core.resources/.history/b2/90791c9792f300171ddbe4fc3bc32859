package com.pranayshetty;

public class Main {
	public static Object lock1=new Object();
	public static Object lock2=new Object();

	public static void main(String[] args) {
		new Thread1().start();
		new Thread2().start();
		
		new Thread1().start();

	}

	private static class Thread1 extends Thread{
		public void run() {
			 synchronized (lock1) {
				System.out.println("Thread 1 lock");
				try {
					Thread.sleep(100);
				}catch (InterruptedException e) {
					
				}
				System.out.println("Wating for lock2");
				synchronized(lock2) {
					System.out.println("Thread 1 has lock 1 and 2");
				}
				System.out.println("THread 1 released lock2");
			}
			System.out.println("Thread 1 released lock1");  
		}
	}
	
	private static class Thread2 extends Thread{
		public void run() {
			 synchronized (lock2) {
				System.out.println("Thread 2 lock");
				try {
					Thread.sleep(100);
				}catch (InterruptedException e) {
					
				}
				System.out.println("Wating for lock2");
				synchronized(lock1) {
					System.out.println("Thread 2 has lock 1 and 2");
				}
				System.out.println("THread 2 released lock1");
			}
			System.out.println("Thread 2 released lock2");  
		}
	}
	

}


